<Window x:Class="WpfApp3.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontSize="30">Vendor</Label>
        <TextBox Text="{Binding InfoCar.Vendor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="30"></TextBox>
        <Label FontSize="30">Model</Label>
        <TextBox Text="{Binding InfoCar.Model,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="30"></TextBox>
        <Label FontSize="30">Year</Label>
        <TextBox Text="{Binding InfoCar.Year,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="30"></TextBox>
    </StackPanel>
</Window>
